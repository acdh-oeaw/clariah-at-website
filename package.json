{
	"name": "@acdh-oeaw/clariah-at-website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.28.1",
	"scripts": {
		"build": "run-s build:site generate:search-index",
		"build:site": "astro build",
		"dev": "astro dev",
		"format:check": "prettier . \"!./@(content|public)/**\" --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"generate:search-index": "pagefind --site ./dist/client/",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint .",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(astro|css)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "astro preview",
		"sync": "astro sync",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "astro check",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/keystatic-lib": "^0.5.3",
		"@acdh-oeaw/lib": "^0.1.12",
		"@acdh-oeaw/mdx-lib": "^0.1.4",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.0.3",
		"@astrojs/mdx": "^4.3.13",
		"@astrojs/node": "^9.5.2",
		"@astrojs/react": "^4.4.2",
		"@astrojs/rss": "^4.0.15",
		"@astrojs/sitemap": "^3.7.0",
		"@floating-ui/dom": "^1.7.4",
		"@fontsource-variable/inter": "^5.2.8",
		"@iconify-json/lucide": "^1.2.86",
		"@iconify-json/simple-icons": "^1.2.67",
		"@keystatic/astro": "^5.0.6",
		"@keystatic/core": "^0.5.48",
		"@pagefind/default-ui": "^1.4.0",
		"@shikijs/rehype": "^3.21.0",
		"@sindresorhus/slugify": "^3.0.0",
		"astro": "^5.16.11",
		"astro-icon": "^1.1.5",
		"astro-tweet": "^0.0.6",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.562.0",
		"lucide-solid": "^0.562.0",
		"pagefind": "^1.4.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-tweet": "^3.3.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-mdx-frontmatter": "^5.2.0",
		"remark-smartypants": "^3.0.2",
		"satori": "^0.19.1",
		"sharp": "^0.34.5",
		"shiki": "^3.21.0",
		"valibot": "^1.2.0",
		"vite": "^6.4.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.12",
		"@acdh-oeaw/eslint-config-astro": "^2.0.16",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.14",
		"@acdh-oeaw/eslint-config-react": "^2.0.14s",
		"@acdh-oeaw/eslint-config-tailwindcss": "^2.0.11",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^3.0.1",
		"@acdh-oeaw/tailwindcss-preset": "^0.0.22",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@astrojs/check": "^0.9.6",
		"@astrojs/ts-plugin": "^1.10.6",
		"@playwright/test": "^1.57.0",
		"@types/hast": "^3.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^24.10.9",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.2.3",
		"autoprefixer": "^10.4.23",
		"axe-core": "^4.11.1",
		"axe-playwright": "^2.2.2",
		"ci-info": "^4.3.1",
		"dotenv": "^17.2.3",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.39.2",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.1",
		"eslint-plugin-n": "^17.23.2",
		"globals": "^17.0.0",
		"is-ci": "^4.1.0",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"postcss": "^8.5.6",
		"prettier": "^3.8.0",
		"prettier-plugin-astro": "^0.14.1",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^17.0.0",
		"tailwindcss": "^3.4.19",
		"type-fest": "^5.4.1",
		"typescript": "^5.9.3"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.astro": [
			"eslint --fix",
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(js|ts|tsx)": [
			"eslint --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(astro|css|js|ts|tsx),!./@(content|public)/**": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
