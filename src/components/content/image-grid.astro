---
import Img from "@/components/content/img.astro";

interface Props {
	images: Array<{
		alt?: string;
		src: string;
	}>;
}

const { images } = Astro.props;
---

<div class="grid grid-cols-[repeat(auto-fill,minmax(min(16rem,100%),1fr))] gap-4 not-prose my-6">
	{
		images.map((image) => {
			const { alt = "", src } = image;

			return (
				<a href={src}>
					<Img alt={alt} class="overflow-hidden rounded-md" src={src} />
				</a>
			);
		})
	}
</div>
