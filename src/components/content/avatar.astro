---
import Img from "@/components/content/img.astro";

interface Props {
	image: string;
	maxSize: number;
	variant: "rounded" | "square";
}

const { image, maxSize, variant } = Astro.props;
---

<Img
	class="aspect-square w-full"
	class:list={variant === "rounded" ? "rounded" : undefined}
	src={image}
	style={{ margin: 0, maxWidth: maxSize + "px" }}
/>
