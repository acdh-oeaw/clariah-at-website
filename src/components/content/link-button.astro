---
import Link from "@/components/link.astro";

interface Props {
	label: string;
	link: {
		discriminant: "consortium" | "custom" | "events" | "news" | "pages";
		value: string;
	};
}

const { label, link } = Astro.props;

const href =
	link.discriminant === "custom"
		? link.value
		: link.discriminant === "pages"
			? `/${link.value}`
			: `/${link.discriminant}/${link.value}`;
---

<Link
	class="my-2 inline-flex rounded-full bg-brand px-6 py-2 text-white no-underline transition hover:bg-brand-intent"
	href={href}
>
	{label}
</Link>
