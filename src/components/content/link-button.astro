---
import ContentLink from "@/components/content/link.astro";
import type { LinkSchema } from "@/lib/keystatic/get-link-props";

interface Props {
	label: string;
	link: LinkSchema;
}

const { label, link } = Astro.props;
---

<ContentLink
	class="my-2 inline-flex rounded-full bg-brand px-6 py-2 text-white no-underline transition hover:bg-brand-intent"
	link={link}
>
	{label}
</ContentLink>
