---
import { createUrl } from "@acdh-oeaw/lib";

interface Props {
	provider: "youtube";
	id: string;
}

const { id } = Astro.props;

const href = String(
	createUrl({
		baseUrl: "https://www.youtube-nocookie.com",
		pathname: `/embed/${id}`,
	}),
);
---

<figure>
	<iframe
		allowfullscreen
		class="aspect-video w-full overflow-hidden rounded-md"
		src={href}
		title={"Video"}></iframe>
	{
		Astro.slots.has("default") ? (
			<figcaption>
				<slot />
			</figcaption>
		) : null
	}
</figure>
