---
import Link from "@/components/link.astro";

interface Props {
	resource: {
		discriminant: "consortium" | "events" | "news" | "pages" | "projects";
		id?: string;
		value: string;
	};
}

const { resource } = Astro.props;
const { discriminant: collection, value: id } = resource;

let href = collection === "pages" ? `/${id}` : `/${collection}/${id}`;

if (resource.id != null) {
	href += `#${resource.id}`;
}
---

<Link href={href}><slot /></Link>
